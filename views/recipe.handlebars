<div class="card my-6">
    <div class="card-content">
        {{#if isAuthor}}<a href="/api/recipes/modify/{{id}}"><button type="submit" class="button subtitle has-text-weight-bold is-ghost mt-5 modify-recipe" id="modify-recipe2">Modify</button></a>{{/if}}
        <div class="media m-2">
            <div class="media-left">
                <figure class="image">            
                    {{#if recipe_image}} <img src="{{recipe_image}}" alt="Recipe image" style="object-fit: cover; height: 300px; width: 300px;">
                    {{else}}<img src="/images/default_image.png" alt="Recipe image" style="object-fit: cover; height: 300px; width: 300px;">
                    {{/if}}
                </figure>
            </div>
            <div class="media-content">
                {{#if favorited}} <div class="box" id="favorite-star" data-id="{{id}}" style="background-image: url('/images/filledstar.png')"></div>  
                {{else}} <div class="box" id="blank-star" data-id="{{id}}" style="background-image: url('/images/unfilledstar.png')"></div>  
                {{/if}}
                <p class="title is-2 ml-6 pt-6">{{recipe_name}}</p></br>
                <p class="title is-4 ml-6 pb-5">Recipe By: {{user.username}}</p>
                <p class="title is-4 ml-6 pb-6">Liked by: {{favorites.length}} <img src="/images/follower.png" width="20"></p>
            </div>
        </div>
        <div class="content pt-5 m-2">
            <div class="columns">
                <div class="column is-4">
                    <p class="title is-4" style="white-space: pre-line">Ingredients:<br><br>{{ingredients}}</p>
                </div>
                <div class="column">
                    <p class="title is-4" style="white-space: pre-line">Instructions:<br><br>{{instructions}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/favorite-add.js"></script>
<script src="/js/favorite-remove.js"></script>